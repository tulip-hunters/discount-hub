              <input type="password" class="form-control edit" name="password" placeholder="Password" required />
              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>

              </span>
            </div>
            <div class="form-group">
              <button type="submit" class="form-control btn btn-primary submit px-3">SIGNUP</button>
            </div>
            <div class="form-group d-md-flex">

            </div>
          </form>

          <div class="d-flex text-center">
            <a href="/login" class="form-control btn btn-primary submit px-3" role="button">If you have account:
              LOGIN</a>

          </div>


        </div>
      </div>
    </div>
  </div>
