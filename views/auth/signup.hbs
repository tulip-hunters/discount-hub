<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 text-center mb-5">
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="login-wrap p-0">
          <p class="fs-4 mb-4 text-center text-white">Don't have an account? Register here</p>
          {{#if errorMessage}}
          <p class="text-white">{{errorMessage}}</p>
          {{/if}}

          <form action="/signup" method="POST" class="signup-form">
            <div class="form-group">
              <input type="text" class="form-control edit" name="username" placeholder="Username" required />
            </div>
            <div class="form-group">
              <input type="email" class="form-control edit" name="email" placeholder="Email" required />
            </div>
            <div class="form-group">
              <input type="password" class="form-control edit" name="password" placeholder="Password" required />
              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>

              </span>
            </div>
            <div class="form-group">
              <button type="submit" class="form-control btn btn-primary submit px-3">SIGNUP</button>
            </div>
            <div class="form-group d-md-flex">

            </div>
          </form>

          <div class="d-flex text-center">
            <a href="/login" class="form-control btn btn-outline-info submit px-4" role="button">If you have an account:
              LOGIN</a>

          </div>


        </div>
      </div>
    </div>
  </div>
</section>