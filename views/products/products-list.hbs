{{!-- <h1>Products list page</h1> --}}
<div class="container">
  <div class="row">

    {{#each products}}
    <div class="padd-space col-12 col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <img src="{{this.imageUrl}}" class="card-img-top" alt="product image">
        <div class="card-body">
          <h5 class="card-title">{{this.name}} </h5>
          <p class="card-title">Shop: {{this.shop.name}} </p>
          <p class="card-text">{{this.description}} </p>
          <p class="card-text fw-light">Regular Price: €{{this.fullPrice}}</p>
          <p class="card-text fw-bold">Price after discount: €{{this.discountPrice}}</p>
          <p class="card-text">Discount valid until: {{this.expirationDate}} </p>
          <p class="card-text"> Category: {{this.tags}} </p>
          <a href="/products/{{this._id}}" class="btn btn-outline-primary">More details</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>